{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
{% if object.client is defined and object.client is not null %}
    <a class="view_link" 
        href="{{ admin.generateObjectUrl('ficheClient', object.client) }}" title="ficheClient">
        <i class="fa fa-user" aria-hidden="true"></i>
        {{object.client.clientNom}}
    </a>
{% elseif object.commande.client is defined and object.commande.client is not null %}
    <a class="view_link" 
        href="{{ admin.generateObjectUrl('ficheClient', object.commande.client) }}" title="ficheClient">
        <i class="fa fa-user" aria-hidden="true"></i>
        {{object.commande.client.clientNom}}
    </a>
{% endif %}
{% endblock %}