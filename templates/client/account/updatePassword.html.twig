{% extends 'base.html.twig' %}

{% block class %}body-ccm{% endblock %}
{% block page_content %}
    <div class="col-md-12 col-lg-10 mx-auto d-flex flex-row justify-content-center my-flex-container align-items-center">
        <div class="row d-flex comment-ca-marche-texte flex-row-reverse my-flex-container w-100 mx-3 mx-lg-4">
            <div class="col-12">
                <div class="px-2">
                    <br>
                    {{ include('client/layout/menu.html.twig') }}
                    {{ form_start(form) }}
                        <div class="demarche-container">
                            <div class="col-10 col-lg-10 mx-auto">
                                <legend class="col-form-label">Changement de mot de passe</legend>
                                <hr>
                                <div class="form-group">
                                    {{ form_label(form.password) }}
                                    {{ form_errors(form.password) }}
                                    {{ form_widget(form.password) }}
                                </div>
                                {% for passwordForm in form.plainPassword %}
                                <div class="form-group">
                                    {{ form_label(passwordForm) }}
                                    {{ form_errors(passwordForm) }}
                                    {{ form_widget(passwordForm) }}
                                </div>
                                {% endfor %}
                                <div class="text-center mb-5">
                                    <input type="submit" class="btn btn-outline-success" value="Enregistrer" />
                                </div>
                            </div>
                        </div>
                    <div class="text-center">
                        {{ form_rest(form) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}