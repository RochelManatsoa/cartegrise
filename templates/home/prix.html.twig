{% block page_content %}
<div class="prix_CG">
    <div class="container">
        <h2 class="home-prix--titre">Quel est le coût d'une Carte Grise?</h2>
        <div class="CG_item">
            <div class="text-center">
                <h3>Prix de votre carte grise par département</h3>
                <p>Cliquez sur la carte pour sélectionner votre département.</p>
            </div>
            <div class="map-container d-flex mx-auto text-center">
                {% if is_mobile_view() %}
                    <div id="francemap" style="margin:auto;  min-width: 250px; height: 300px; position: relative; overflow: hidden; background-color: rgb(249, 249, 249);"></div>
                {% elseif is_tablet_view() %}
                    <div id="francemap"
                        style="margin:auto;  min-width: 350px; height: 400px; position: relative; overflow: hidden; background-color: rgb(249, 249, 249);">
                    </div>
                {% elseif is_full_view() %}
                    <div id="francemap"
                        style="margin:auto;  min-width: 750px; height: 700px; position: relative; overflow: hidden; background-color: rgb(249, 249, 249);">
                    </div>
                {% endif %}
                <div class="info-map">
                </div>
            </div>
            <center class="foot_PrixCG mt-5">
                <h3>Prix de la Carte Grise dans <span class="departement_selectione"> votre département</span></h3>
                <table class="col-12 col-md-6 text-center">
                    <tr class="text-center">
                        <td>Tarif cheval fiscal</td>
                        <td>Tarif exoneration</td>
                    </tr>
                    <tr class="text-center">
                        <td class="departement_tarif"> -- €</td>
                        <td class="departement_exoneration"> -- %</td>
                    </tr>
                </table>
                <a href="#" class="lien_pref target_blank" target="_self">
                    <img src="{{ asset('asset/img/logo.png')}}" style="height:75px;" class="img-thumbnail src_img" alt="...">
                </a>
                <div class="text-center mt-5">
                    <a class="btn btn-blue btn-blue-outline lien_pref target_blank"  target="_self" href="#" >En savoir plus sur cette préfécture</a>
                    <a class="btn btn-blue" href="{{path('Accueil')}}">Passer ma commande <i class="icon-right-arrow"></i></a>
                </div>
            </center>
        </div>
    </div>
</div>
{% endblock %}

