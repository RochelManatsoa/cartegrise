<div class="row">
    <div class="col-md-5">
        <h2>Caractéristiques du véhicule</h2>
        <div class="list-grid">
            <div class="list-grid__item">
                <div >{{ 'home.resum.mark'|trans }}</div>
                <div>{{ commande.carInfo.marque }}</div>
            </div>
            <div  class="list-grid__item">
                <div>{{ 'home.resum.model'|trans }}</div>
                <div>{{ commande.carInfo.model | displayValue }}</div>
            </div>
            <div class="voir_plus_content_car" style="display: none;">
                <div class="list-grid__item">
                    <div>{{ 'home.resum.color'|trans }}</div>
                    <div>{{ commande.carInfo.color | displayValue }}</div>
                </div>
                <div class="list-grid__item">
                    <div>{{ 'home.resum.nbPlace'|trans }}</div>
                    <div>{{ commande.carInfo.nbPlace | displayValue}}</div>
                </div>
                <div class="list-grid__item">
                    <div>{{ 'home.resum.power'|trans }}</div>
                    <div>{{ commande.carInfo.horsePower | displayValue}} ch</div>
                </div>
                <div class="list-grid__item">
                    <div>{{ 'home.resum.powerFiscal'|trans }}</div>
                    <div>{{ commande.carInfo.horsePowerFiscal | displayValue}}</div>
                </div>
                <div class="list-grid__item">
                    <div>{{ 'home.resum.serialNum'|trans }}</div>
                    <div>{{ commande.carInfo.serialNumber | displayValue}}</div>
                </div>
                <div class="list-grid__item">
                    <div>{{ 'home.resum.vin'|trans }}</div>
                    <div>{{ commande.carInfo.vin | displayValue}}</div>
                </div>
            </div>
            <div  class="list-grid__item list-grid__item-button">
                <div>
                    <button class="collapsed btn btn-info d-flex align-items-center justify-content-between"  id="voir_plus_button">
                        <span>voir plus</span><span class="moins">voir moins</span><i class="icon-arrow-down"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6">
        <h2>Récapitulatif de la demande</h2>
        <div class="list-grid">
            <div class="list-grid__item">
                <div>Demarche</div>
                <div>{{commande.demarche}}</div>
            </div>
            <div  class="list-grid__item">
                <div>Immatriculation</div>
                <div>{{commande.immatriculation}}</div>
            </div>
            <div class="list-grid__item">
                <div>Département</div>
                <div>{{commande.codePostal}}</div>
            </div>
        </div>
    </div>
</div>