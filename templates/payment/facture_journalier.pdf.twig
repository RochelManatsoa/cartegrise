                </td>
                <td clospan="2" class="text-center">
                {% if key == 0 %}
                0.00
                {% else %}
                {{ key / 100 }}
                {% endif %}
                
                </td>
                <td clospan="2" class="text-center">{{ result | length }}</td>
                <td class="text-center">{{ (getTaxesTotal(result))|number_format(2, '.', ',') }}</td>
                <td clospan="2" class="text-center">
                  {{tvaForRefund(key) |number_format(2, '.', ',') }}
