{% trans_default_domain 'FOSUserBundle' %}
<div class="register-block" data-parallax="scroll" data-image-src="{{ asset('asset/img/bg_inscription.jpg')}}">
	<div class="container">
		<div class="block_form">
            <form class="mail-rejet mdp-oublie row justify-content-center" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                <div class="col-lg-6">
                    <div class="formContent-bc pt-5 pb-5">
                        <div class="row justify-content-center text-center">
                            <div class="col-10">
                                <div class="form-group">
                                    <label for="username" class="col-form-label col-form-label">{{ 'resetting.request.username'|trans }}</label>
                                    <input type="text" id="username" name="username" required="required" class="form-control" placeholder="exemple@cgofficiel.fr">
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn-reste-m btn btn-blue"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>